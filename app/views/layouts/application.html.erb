<!DOCTYPE html>
<html>
<head>
  <title> Always Follow Your Dreams! </title>
  <%= stylesheet_link_tag 'application' %>
  <%= stylesheet_link_tag 'jquery-ui' %>
  <%= javascript_include_tag :defaults,'jquery-ui', 'application'%>
  <%= csrf_meta_tag %>
</head>

<body>
	
	<div class="container">
		<div id="message">
     	<%= render :partial => 'layouts/message' %>
    </div>
		<header>
			<%= link_to image_tag("logo.png", :class => "round"), root_path %>
			
			<nav class="round">
				<ul>
					<li><%= link_to "Home", users_home_path %></li>
					<li><%= link_to "Help", users_help_path %></li>
					<% if user_signed_in? %>
				    <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
				  <% else %>
				    <li><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign in", new_user_session_path %></li>
				  <% end %>
				</ul>
			</nav>
	
		</header>
		<div id='section' class='round'>
			 <%= yield  %>
		</div>

	</div>
</body>
</html>
